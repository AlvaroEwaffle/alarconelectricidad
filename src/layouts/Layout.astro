---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  canonical?: string;
  ogImage?: string;
  structuredData?: any;
}

const { 
  title, 
  description = "Alarcón Electricidad - Servicios Eléctricos en Talca. Instalaciones, reparaciones y mantenimiento eléctrico con certificación SEC. Especialistas en electricidad domiciliaria e industrial.",
  keywords = "electricista talca, servicios eléctricos, instalaciones eléctricas, reparaciones eléctricas, mantenimiento eléctrico, certificación SEC, electricista profesional, talca chile, región del maule",
  canonical = Astro.url.href,
  ogImage = "/logo.png",
  structuredData
} = Astro.props;

const defaultStructuredData = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Alarcón Electricidad",
  "description": "Servicios eléctricos profesionales en Talca y Región del Maule con certificación SEC",
  "url": "https://alarconelectricidad.cl",
  "telephone": "+56937418142",
  "email": "alarcon1976suazo@gmail.com",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Talca",
    "addressRegion": "Región del Maule",
    "addressCountry": "CL"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "-35.4264",
    "longitude": "-71.6554"
  },
  "openingHours": "Mo-Fr 08:00-18:00,Sa 08:00-14:00",
  "priceRange": "$$",
  "image": "https://alarconelectricidad.cl/logo.png",
  "logo": "https://alarconelectricidad.cl/logo.png",
  "sameAs": [
    "https://wa.me/56937418142"
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Servicios Eléctricos",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Instalaciones Eléctricas Domiciliarias",
          "description": "Instalación eléctrica completa para hogares con certificación SEC"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Reparaciones y Mantenimiento Eléctrico",
          "description": "Diagnóstico y reparación de problemas eléctricos con tecnología avanzada"
        }
      }
    ]
  }
};
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Francisco Alarcón" />
    <meta name="theme-color" content="#212121" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonical} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/logo.png" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Alarcón Electricidad" />
    <meta property="og:locale" content="es_CL" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonical} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    
    <!-- Additional SEO -->
    <meta name="geo.region" content="CL-ML" />
    <meta name="geo.placename" content="Talca" />
    <meta name="geo.position" content="-35.4264;-71.6554" />
    <meta name="ICBM" content="-35.4264, -71.6554" />
    
    <title>{title}</title>
    <meta name="generator" content={Astro.generator} />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData || defaultStructuredData)} />
  </head>
  <body class="bg-white text-main font-sans">
    <slot />
  </body>
</html>
